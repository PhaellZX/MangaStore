<nav class="navbar navbar-expand-lg navbar-light bg-custom navnav">
  <div class="container-fluid">
    <a class="navbar-brand font-negrito" style="color: white;" href="/">Manga Store</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link" aria-current="page" style="color: white;" href="/">Início</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" aria-current="page" style="color: white;" href="/catalogo">Catálogo</a>
        </li>
      </ul>
      <div class="container__item">
        <form class="form">
          <input type="text" class="search" placeholder="Buscar Manga" />
          <button type="submit" class="search-button">
            <img src="/imgs/search.svg"/>
          </button>
        </form>
      </div>      
      <ul class="navbar-nav ml-auto mb-2 mb-lg-0">
        <% if(currentUser) {%>  
          <li class="nav-item">
            <span class="nav-link" style="color: white;">Olá, <%= currentUser.username %></span>
        </li>
        <li class="nav-item">
          <a class="nav-link" aria-current="page" style="color: white;" href="/logout">Sair</a>
        </li>
        <% } else { %> 
        <li class="nav-item">
          <a class="nav-link" aria-current="page" style="color: white;" href="/cadastro">Cadastro</a>
